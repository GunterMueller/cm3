%
% Paper over SOME cross-build scenarios, without affecting native builds.
%
HOST_BUILDDIR = BUILD_DIR
if defined("HOST")
    if not equal(HOST, TARGET)
        HOST_BUILDDIR = HOST
    end
end

if defined("M3BUNDLE")
  _M3BUNDLE = M3BUNDLE
else
  _M3BUNDLE = format(ROOT & SL & "m3-tools" & SL & "m3bundle" & SL & "%s" &
                     SL & "m3bundle", HOST_BUILDDIR)
  M3BUNDLE = _M3BUNDLE
end
