
dirs = [ 
  ".." & SL & "os",
  ".." & SL & "pqueue" & SL & "fromtty",
  ".." & SL & "pqueue" & SL & "heapsort1",
  ".." & SL & "pqueue" & SL & "heapsort2",
  ".." & SL & "sequence",
  ".." & SL & "sortedtable",
  ".." & SL & "random"
]

foreach d in dirs
  dotests = "cm3 -build -override -DROOT=" & ROOT & " -DRUN -DTEST"
  pushd( d )
  write( CR, "=== performing tests in ", getwd(), " ===", CR )
  write( dotests, CR )
  r = q_exec( dotests )
  write( CR, "cm3 returned ", r, CR, CR )
  popd()
end
