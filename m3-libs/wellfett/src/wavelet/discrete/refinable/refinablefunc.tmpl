%
%  Quake functions to instantiate operations on Daubechies wavelets for generic float types.
%

readonly proc RefinableFunc (nm, field, rimpl, cfield, cimpl, vimpl, cvimpl, mimpl) is
  local basic   = nm & "RefinableFunc"
  local rfield  = field & rimpl
  local vfield  = field & "Vector" & vimpl
  local cvfield = cfield & "VectorTrans"
  local mfield  = field & "Matrix" & mimpl
  local eigen   = field & "EigenSystem"
  local signal  = field & "Signal"
  build_generic_intf (basic, "RefinableFunc", [rfield,          mfield, eigen, signal], VISIBLE)
  build_generic_impl (basic, "RefinableFunc", [rfield, cvfield, mfield, eigen, signal])
end
