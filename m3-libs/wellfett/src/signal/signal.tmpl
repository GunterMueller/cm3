%
%  Quake functions to instantiate operations on generic signals.
%

readonly proc Signal (nm, field) is
  local basic = nm & "Signal"
  local rep   = basic & "Rep"
  build_generic_intf (basic, "Signal",    [field], VISIBLE)
  build_generic_impl (basic, "Signal",    [field, rep])
  build_generic_intf (rep,   "SignalRep", [field, basic], VISIBLE)
end
