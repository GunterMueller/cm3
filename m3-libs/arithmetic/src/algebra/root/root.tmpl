%
%  Quake functions to instantiate operations on generic roots.
%

readonly proc RootBasic (nm, field, rimpl, pimpl) is
  local basic  = nm & "RootBasic"
  local rfield = field & rimpl
  local pfield = field & "Polynomial" & pimpl
  local vrep   = field & "VectorRep"
  build_generic_intf (basic, "RootBasic", [rfield,       pfield], VISIBLE)
  build_generic_impl (basic, "RootBasic", [rfield, vrep, pfield])
end

readonly proc RootApproximation (nm, field, rimpl, cimpl) is
  local basic  = nm & "RootApproximation"
  local rfield = field & rimpl
  local rtrans = field & "Trans"
  local rroot  = field & "RootBasic"
  local cfield = field & "Complex" & cimpl
  local ctrans = field & "ComplexTrans"
  local cpoly  = field & "ComplexPolynomialBasic"
  local croot  = field & "ComplexRootBasic"
  local vrep   = field & "VectorRep"
  local cvrep  = field & "ComplexVectorRep"
  build_generic_intf (basic, "RootApproximation", [rfield,         rroot, cfield,                croot], VISIBLE)
  build_generic_impl (basic, "RootApproximation", [rfield, rtrans, rroot, cfield, ctrans, cpoly, croot, vrep, cvrep])
end
