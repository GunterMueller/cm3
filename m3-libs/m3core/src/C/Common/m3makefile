Interface ("Cerrno")
Interface ("Cstddef")
Interface ("Cstdint")
Interface ("Cstdlib")
Interface ("Ctypes")
Module ("M3toC")
c_source ("CerrnoC")

% not yet common to all, but should be, will be

if     equal (TARGET, "AMD64_LINUX")
    or equal (TARGET, "AMD64_FREEBSD")
    or equal (TARGET, "SPARC32_LINUX")
    or equal (TARGET, "SPARC64_LINUX")
    or equal (TARGET, "MIPS64_OPENBSD")
    or equal (TARGET, "PPC32_OPENBSD")
    or equal (TARGET, "SPARC64_OPENBSD")
    or equal (TARGET, "SPARC64_SOLARIS")
    or equal (TARGET, "NT386")
    or equal (TARGET, "LINUXLIBC6")
    or equal (TARGET, "PPC_LINUX")
    or equal (TARGET, "I386_OPENBSD")
  Interface ("Cstring")
  Interface ("Cstdio")
end

% This could be common; it just isn't used by the other ports.

if         equal (TARGET, "AMD64_DARWIN")
        or equal (TARGET, "FreeBSD")
        or equal (TARGET, "FreeBSD2")
        or equal (TARGET, "FreeBSD3")
        or equal (TARGET, "FreeBSD4")
        or equal (TARGET, "I386_DARWIN")
        or equal (TARGET, "LINUX")
        or equal (TARGET, "LINUXELF")
        or equal (TARGET, "LINUXLIBC6")
        or equal (TARGET, "NetBSD2_i386")
        or equal (TARGET, "OS2")
        or equal (TARGET, "PPC_DARWIN")
  Interface ("Csignal")
end
