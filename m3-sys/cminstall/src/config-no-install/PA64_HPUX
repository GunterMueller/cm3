readonly TARGET = "PA64_HPUX" % code generation target
readonly WORD_SIZE = "64BITS" % { "32BITS" or "64BITS" }
readonly GNU_PLATFORM = "hppa64-hpux"

% stabs not supported
readonly m3back_flags = "-quiet -fPIC"
%readonly SYSTEM_CC = "cc +DD64" % C compiler
readonly SYSTEM_CC = "/usr/local/64/bin/gcc -g -fPIC" % C compiler
readonly SYSTEM_ASM = "/usr/local/64/bin/gas" % Assembler

%
% newer platforms never needed these workarounds for
% bootstrapping with older builds
%
readonly proc GetGcWrapFlags() is return "" end
readonly proc FixM3GcDefs(x) is return x end

readonly proc GetM3BackFlag(x) is
    if equal (x, "-fno-reorder-blocks")
        return x
    end
    if equal (x, "-m32") or equal (x, "-m64")
        return ""
    end
    error ("unknown flag: " & x)
end

include("HPUX.common")
