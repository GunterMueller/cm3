readonly TARGET = "NetBSD2_i386"
readonly WORD_SIZE = "32BITS"

readonly m3back_flags = "-gstabs+ -quiet -m32 -fPIC"
readonly SYSTEM_CC = "gcc -gstabs+ -m32 -fPIC"
readonly SYSTEM_LD = SYSTEM_CC & " -Wl,-z,now"
readonly SYSTEM_ASM = "as -32"

%
% newer platforms never needed these workarounds for
% bootstrapping with older builds
%
readonly proc GetGcWrapFlags() is return "" end
readonly proc FixM3GcDefs(x) is return x end
readonly proc GetM3BackFlag(x) is return x end

GNU_MAKE = "gmake"

%
% Do not record build-time paths for searching at runtime.
% Users should set LD_LIBRARY_PATH%. (Still need to try "origin".)
%

M3_SHARED_LIB_ARG = "-Wl,-rpath-link,"

include("Unix.common")

%
% update lib locations
%

SYSTEM_LIBS{"ODBC"} = [ "-Wl,-R/usr/pkg/lib", "-L/usr/pkg/lib", "-lodbc" ]
SYSTEM_LIBS{"POSTGRES95"} = [ "-Wl,-R/usr/pkg/lib", "-L/usr/pkg/lib", "-lpq" ]
SYSTEM_LIBS{"X11"} = [ "-Wl,-R/usr/X11R6/lib", SYSTEM_LIBS{"X11"} ]
