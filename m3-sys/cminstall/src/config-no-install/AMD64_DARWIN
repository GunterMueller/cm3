readonly TARGET       = "AMD64_DARWIN"
readonly WORD_SIZE    = "64BITS"

proc FileExists(x) is
    return not stale(x, x)
end

SYSTEM_ASM = "/usr/libexec/gcc/darwin/x86_64/as"
if not FileExists(SYSTEM_ASM)
    SYSTEM_ASM = "as"
end

include("Darwin.common")
