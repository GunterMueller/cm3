proc FileExists(x) is
    return not stale(x, x)
end

proc exists(x) is
    return FileExists(x)
end

proc DeleteFile(a) is
    delete_file(a)
end

readonly OS = $OS

proc MoveFile(a, b) is
    local ret = 0
    if defined("fs_cp")
        fs_cp(a, b)
        DeleteFile(a)
    else
        %
        % The check of OS_TYPE confuses host and target.
        %
        if equal(OS, "Windows_NT") and not equal (OS_TYPE, "POSIX")
            ret = q_exec(["cmd", "/c", "move", "\"" & a & "\"", "\"" & b & "\""])
        else
            ret = q_exec(["mv", a, b])
        end
    end
end

proc DeleteFiles(a) is
    foreach b in a
        DeleteFile(b)
    end
end

%------------------------------------------------------------------------------

proc IsInterix() is
  if defined("TARGET_OS")
    if equal(TARGET_OS, "INTERIX")
      return TRUE
    end
  end
  return FALSE
end

proc HasTrestle() is
  return not IsInterix()
end

% temporary compat
proc HasGui() is
  return HasTrestle()
end

proc HasOpenGL() is
  % but see http://www.interix.com/Motif-OpenGL.htm
  return not IsInterix()
end

proc IsOpenBSD() is
  if defined("TARGET_OS")
    if equal(TARGET_OS, "OPENBSD")
      return TRUE
    end
  end
  return FALSE
end

