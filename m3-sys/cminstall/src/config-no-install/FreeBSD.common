readonly TARGET_OS = "FREEBSD"

GNU_MAKE = "gmake"

include("Unix.common")

SYSTEM_LIBS{"LIBC"} = [ "-lm", "-pthread" ]
SYSTEM_LIBS{"ODBC"} = [ "-Wl,-R/usr/local/lib", "-L/usr/local/lib", "-lodbc" ]
SYSTEM_LIBS{"POSTGRES95"} = [ "-Wl,-R/usr/local/lib", "-L/usr/local/lib", "-lpq" ]

SYSTEM_LD = SYSTEM_CC
  & " -z now"
  & " -z origin"
  & " -Bsymbolic"
  & " -Wl,--fatal-warnings"
  & " -Wl,--warn-common"
  & " -Wl,-rpath,\\$ORIGIN"
  & " -Wl,-rpath,\\$ORIGIN/../lib"

include("gnuld.common")
