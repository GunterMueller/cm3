if defined("M3_USE_OVERRIDES")
  if M3_USE_OVERRIDES
    M3_SHARED_LIB_ARG = "-Wl,-rpath,"
  else
    M3_SHARED_LIB_ARG = ""
    if equal($M3_PORTABLE_RUN_PATH, "")
      % This assumes SYSTEM_LD is actually gcc, driving GNU ld.
      SYSTEM_LD = SYSTEM_LD
        & " -Wl,-rpath," & INSTALL_ROOT & "/lib" % non-portable
    end
  end
else
  M3_SHARED_LIB_ARG = "-Wl,-rpath,"
end
